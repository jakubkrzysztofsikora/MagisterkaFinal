<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:system="clr-namespace:System;assembly=mscorlib">

  <!-- String resource that can be localized -->
  <system:String x:Key="StartPathfinding">_Start Pathinding</system:String>
  <system:String x:Key="UnknownPathfindingError">Unknown Pathinding Error</system:String>
  <system:String x:Key="PathConfError">Path Configuration Error</system:String>
  <system:String x:Key="GraphConfError">Graph Configuration Error</system:String>
  <system:String x:Key="GeneralError">General Application Error</system:String>
  <system:String x:Key="CannotBeDefinedPosition">This particular node cannot be defined position.</system:String>
  
  <Color x:Key="LabelBackgroundColor">White</Color>
  
  <Color x:Key="BlockedNodeColor">Crimson</Color>
  <Color x:Key="OtherNodeColor">DarkSeaGreen</Color>
  <Color x:Key="CurrentNodeColor">GreenYellow</Color>

</ResourceDictionary>